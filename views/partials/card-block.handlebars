<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-9 mx-auto">
      <div class="card card-signin flex-row my-5">
        <div class="card-img-left d-none d-md-flex">
          <!-- Background image for card set in CSS! -->
        </div>
        <div class="card-body">
          <h1 class="card-title text-center"><b>Bootcamp Outfitters</b></h1>

          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand" href="/">
                <!-- <b>Sign Up Page</b>--></a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                  {{#if user}}
                  <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                  </li>
                  {{/if}}
                </ul>
                <ul class="navbar-nav">
                  {{#unless user}}
                  <li class="nav-item">
                    <a class="nav-link" href="/">Sign up</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                  </li>
                  {{!-- <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                  </li> --}}
                  {{/unless}}
                  {{#if user}}
                  {{!-- <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                  </li> --}}
                  {{/if}}
                </ul>
              </div>
            </div>
          </nav>


          <div class="row">
            <div class="col-md-12">
              {{#if signup}}
              <h4>Sign Up Page</h4>
              {{else}}
              <h4>Login Page</h4>
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <form id="user-{{loginOrSignup}}">
                <div class="form-group">
                  <label for="email">Email address</label>
                  <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                    placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                </div>

                {{#if signup}}
                  <div class="form-group">
                    <label for="city">City</label>
                    <input type="city" name="city" class="form-control" id="city" placeholder="City">
                  </div>
                  <div class="form-group">
                    <label for="state">State</label>
                    <input type="state" name="state" class="form-control" id="state" placeholder="State">
                  </div>
                  
                  <div class="form-group">
                    <label for="zipcode">Zip Code</label>
                    <input type="zipcode" name="zipcode" class="form-control" id="zipcode" placeholder="Zip Code">
                  </div>
                {{/if}}
                <button type="submit" class="btn btn-primary">Submit</button>

              </form>
            </div>
          </div>

        </div>
      </div>
    </div>


  </div>
</div>