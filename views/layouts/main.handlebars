                <a class="nav-link" href="/">Login</a>
              </li>
              {{!-- <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
              </li> --}}
              {{/unless}}
              {{#if user}}
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              {{!-- <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
              </li> --}}
              {{/if}}
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <div class="container-fluid">
    {{{body}}}
  </div>

